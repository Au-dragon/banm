<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.LoginOne">
    <TextView
        android:layout_width="@dimen/dp_201"
        android:layout_height="@dimen/dp_22"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_73"
        android:text="你好，为了获取更好的服务"
        android:textColor="@color/ju"
        android:textSize="@dimen/dp_16" />

    <TextView
        android:layout_width="@dimen/dp_198"
        android:layout_height="@dimen/dp_38"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_9"
        android:text="请登录伴米旅行"
        android:textSize="@dimen/dp_27" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_106">
        <EditText
            android:id="@+id/et_phone"

            android:layout_width="@dimen/dp_329"
            android:layout_height="@dimen/dp_1"
            android:layout_gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/iv_phone"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_21"
                android:layout_marginLeft="@dimen/dp_31"
                android:background="@drawable/phone" />

            <TextView
                android:id="@+id/tv"
                android:layout_toRightOf="@+id/iv_phone"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="+86"
                android:textColor="@color/h6363" />

            <ImageView
                android:layout_toRightOf="@+id/tv"
                android:id="@+id/tv1"
                android:layout_width="@dimen/dp_7"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/dp_5"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@drawable/select" />

            <EditText
                android:layout_toRightOf="@+id/tv1"
                android:layout_width="@dimen/dp_118"
                android:id="@+id/et"
                android:inputType="phone"
                android:maxLength="11"
                android:maxLines="1"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/dp_22"
                android:layout_marginRight="@dimen/dp_39"
                android:hint="请输入手机号码"
                android:textColor="@color/hc8c8" />

            <ImageView
                android:id="@+id/iv"
                android:layout_toRightOf="@+id/et"
                android:layout_centerVertical="true"
                android:background="@drawable/button_unavailable"
                android:layout_marginRight="@dimen/dp_22"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_30" />
        </EditText>
    </RelativeLayout>

    <TextView
        android:layout_marginTop="@dimen/dp_181"
        android:text="-or-"
        android:textSize="@dimen/dp_14"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_wei"
        android:layout_marginTop="@dimen/dp_6"
        android:background="@drawable/wechat"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50" />
</LinearLayout>