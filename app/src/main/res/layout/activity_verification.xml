<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.VerificationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_35"
            android:background="@drawable/back_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_200"
            android:layout_marginTop="@dimen/dp_37"
            android:text="重新发送"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_37"
            android:layout_marginRight="@dimen/dp_15"
            android:text="  (56s)"
            android:textColor="@color/hui99"
            android:textSize="@dimen/dp_14" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_44"
        android:text="请输入验证码"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_27" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_83"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_56"
                android:layout_marginLeft="@dimen/dp_48"
                android:background="@drawable/kuang"
                android:gravity="center"
                android:inputType="number" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_56"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_toRightOf="@+id/tv1"
                android:background="@drawable/kuang"
                android:gravity="center"
                android:inputType="number" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_56"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_toRightOf="@+id/tv2"
                android:background="@drawable/kuang"
                android:gravity="center"
                android:inputType="number" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_56"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_48"
                android:layout_toRightOf="@+id/tv3"
                android:background="@drawable/kuang"
                android:inputType="number" />

            <EditText
                android:id="@+id/item_edittext"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:inputType="number"
                android:textSize="@dimen/dp_32" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>