<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        app:cardCornerRadius="@dimen/dp_20"
        app:cardElevation="@dimen/dp_5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/cardURL"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_450"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_116"
                android:background="@color/bai">

                <TextView
                    android:id="@+id/city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_27"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxEms="4"
                    android:maxLines="1"
                    android:textColor="@color/c_373737"
                    android:textSize="@dimen/dp_26" />

                <ImageView
                    android:id="@+id/positioning"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_12"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_43"
                    android:layout_toRightOf="@id/city"
                    android:background="@drawable/ic_loading_rotate" />

                <TextView
                    android:id="@+id/provinces"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_39"
                    android:layout_toRightOf="@id/positioning"
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/sp_14" />

                <Button
                    android:id="@+id/priceInCents"
                    android:layout_width="@dimen/dp_74"
                    android:layout_height="@dimen/dp_29"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_34"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@color/c_FFA436"
                    android:textColor="@color/bai" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/city"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxEms="5"
                    android:maxLines="1"
                    android:textColor="@color/c_636363"
                    android:textSize="@dimen/sp_18" />

                <TextView
                    android:id="@+id/people_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/priceInCents"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_20"
                    android:text="530人购买"
                    android:textColor="@color/c_636363"
                    android:textSize="@dimen/sp_12" />

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
