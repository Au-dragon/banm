<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/dp_8"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:background="#D3D3D3"
        android:layout_margin="@dimen/dp_8"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv"
            android:layout_margin="@dimen/dp_8"
            android:src="@mipmap/icon_me_kaquan_banmi2"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60" />
        <LinearLayout
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_toRightOf="@+id/iv"
            android:layout_marginLeft="@dimen/dp_8"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:id="@+id/name"
                android:text="dasdas"
                android:textSize="@dimen/sp_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:id="@+id/title"
                android:text="000000"
                android:textSize="@dimen/sp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:layout_toLeftOf="@+id/moneyy"
            android:src="@mipmap/cbdhyut"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_60" />
        <ImageView
            android:layout_alignParentRight="true"
            android:src="@mipmap/guoqiguoqi"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30" />
        <TextView
            android:id="@+id/moneyy"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:text="Â¥10"
            android:textSize="@dimen/sp_40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</android.support.v7.widget.CardView>